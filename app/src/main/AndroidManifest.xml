<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <package android:name="moe.shizuku.privileged.api" /> <!-- Shizuku -->
        <package android:name="ru.zdevs.zarchiver" />         <!-- ZArchiver -->
        <package android:name="com.topjohnwu.magisk" />       <!-- Magisk -->
        <package android:name="me.weishu.kernelsu" />         <!-- KernelSU -->
        <package android:name="me.bmax.apatch" />             <!-- APatch -->

        <!-- Web Browser Intent -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>

        <!-- Game Discovery Intent (Important for Android 11+) -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.GAME" />
        </intent>
    </queries>

    <!-- Connectivity Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" tools:node="remove" />

    <!-- Ads & Notification Permissions -->
    <uses-permission android:name="android.permission.AD_ID" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="AllFilesAccessPolicy,GooglePlayIgnore,ScopedStorage" />

    <!-- Overlay & Service Permissions -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE"
        tools:ignore="ForegroundServicesPolicy" />
    <!-- Required for Android 14+ specific foreground service types -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Shizuku & System Permissions -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="moe.shizuku.manager.permission.API_V23" />
    <!-- BIND_VPN_SERVICE is only needed by the Service definition, not uses-permission,
         but keeping it doesn't hurt. -->
    <uses-permission
        android:name="android.permission.BIND_VPN_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <!-- Required for a Game Launcher -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catsmoker"
        tools:targetApi="35">

        <!-- LSPosed Module Metadata -->
        <meta-data android:name="xposedmodule" android:value="true" />
        <meta-data android:name="xposeddescription" android:value="Unlock max FPS and optimize supported games." />
        <meta-data android:name="xposedminversion" android:value="53" />
        <meta-data android:name="xposedscope" android:resource="@array/scope" />

        <!-- Shizuku Metadata -->
        <meta-data android:name="moe.shizuku.client.V3_SUPPORT" android:value="true" />

        <!-- Start.io Ads Metadata -->
        <meta-data android:name="com.startapp.sdk.APPLICATION_ID" android:value="210163701" />
        <meta-data android:name="com.startapp.sdk.RETURN_ADS_ENABLED" android:value="false" />

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RootActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Catsmoker.NoWindowBackground" />

        <activity
            android:name=".FeaturesActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Catsmoker.NoWindowBackground" />

        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Catsmoker" />

        <activity
            android:name=".NonRootActivity"
            android:exported="false"
            android:label="@string/non_root_file_manager_title"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Catsmoker.NoWindowBackground" />

        <activity
            android:name=".GameLauncherActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Catsmoker" />

        <!-- Shizuku Provider -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:multiprocess="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

        <!-- Services -->

        <!-- Crosshair Overlay -->
        <service
            android:name=".CrosshairOverlayService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Provides a visible crosshair overlay on top of games" />
        </service>

        <!-- Performance Overlay -->
        <service
            android:name=".PerformanceOverlayService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Provides a visible performance overlay on top of games" />
        </service>

        <!-- Play Time Tracker -->
        <service
            android:name=".PlayTimeTrackerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Tracks game usage duration in the background" />
        </service>

        <!-- Game VPN Service -->
        <service
            android:name=".GameVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

    </application>

</manifest>
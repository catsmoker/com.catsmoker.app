<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Icon -->
        <!-- Updated to use icon.png and removed tint to keep original colors -->
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon"
            android:scaleType="fitCenter" />

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace"
            android:text="@string/about_header_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- Dynamic Version (Matches Java code) -->
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="monospace"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="v1.0" />

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/My.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:lineSpacingExtra="6dp"
                android:padding="24dp"
                android:text="@string/about_text"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer to push button to bottom if screen is tall -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="32dp" />

        <!-- Updates Section -->
        <TextView
            style="?attr/textAppearanceLabelLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="Updates"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/check_for_updates_button"
                style="@style/My.Button.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="monospace"
                android:text="@string/check_for_updates" />

            <ToggleButton
                android:id="@+id/release_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textOff="@string/stable"
                android:textOn="@string/pre_release" />
        </LinearLayout>

        <!-- Links Section -->
        <TextView
            style="?attr/textAppearanceLabelLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="Support &amp; Resources"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/github_button"
            style="@style/My.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/github_button"
            app:icon="@drawable/ic_github"
            app:iconPadding="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/donate_button"
            style="@style/My.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/donate_button"
            app:icon="@drawable/ic_favorite"
            app:iconPadding="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/legal_button"
            style="@style/My.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/legal_information_button"
            app:icon="@drawable/ic_shield"
            app:iconPadding="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="32dp" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/My.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:minWidth="120dp"
            android:text="@string/back_button"
            android:textStyle="bold" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            android:fontFamily="monospace"
            android:text="@string/copyright_text"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

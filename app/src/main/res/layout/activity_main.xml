<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:theme="@style/Theme.Catsmoker">

    <!--
      Scrollable Content Area
      Constrained to TOP of screen and TOP of Ad Banner.
      clipToPadding="false" allows content to scroll behind the bottom padding visually.
    -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/startio_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <include
                layout="@layout/include_screen_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- System Info Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.03"
                android:fontFamily="monospace"
                android:text="@string/system_status"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorPrimary"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <!-- Console-like Status Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/app_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:lineSpacingMultiplier="1.3"
                    android:padding="24dp"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    tools:text="CatSmoker V1.6\nProcessor: arm\nModel: SDK\nMemory: 50%\nBattery: Good" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Secondary Actions Container for Material Design Compliance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_spoofing"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:maxWidth="320dp"
                    android:minWidth="200dp"
                    android:minHeight="48dp"
                    android:contentDescription="@string/spoofing_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="@string/spoofing_button"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:strokeColor="?attr/colorPrimary" />

                <LinearLayout
                    android:id="@+id/spoofing_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_root_lsposed"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:maxWidth="156dp"
                        android:minHeight="48dp"
                        android:backgroundTint="?attr/colorSecondaryContainer"
                        android:contentDescription="@string/root_lsposed_button"
                        android:fontFamily="monospace"
                        android:paddingVertical="12dp"
                        android:text="@string/root_lsposed_button"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_shizuku"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:maxWidth="156dp"
                        android:minHeight="48dp"
                        android:backgroundTint="?attr/colorSecondaryContainer"
                        android:contentDescription="@string/non_root_shizuku_button"
                        android:fontFamily="monospace"
                        android:paddingVertical="12dp"
                        android:text="@string/non_root_shizuku_button"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />
                </LinearLayout>

                <!-- Secondary Actions (Outlined Buttons) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crosshair"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:maxWidth="320dp"
                    android:minWidth="200dp"
                    android:minHeight="48dp"
                    android:contentDescription="@string/game_tools_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="@string/game_tools_button"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:strokeColor="?attr/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_about"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:maxWidth="320dp"
                    android:minWidth="200dp"
                    android:minHeight="48dp"
                    android:contentDescription="@string/about_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="@string/about_button"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:strokeColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Game Flipper (Inflated programmatically) -->
            <ViewStub
                android:id="@+id/view_stub_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout="@layout/view_flipper" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Start.io Banner -->
    <!-- Pinned to the bottom of the screen -->
    <FrameLayout
        android:id="@+id/startio_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorSurfaceContainerHighest"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:text="@string/advertisement"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <include
                layout="@layout/include_screen_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- SECTION: GAME LIBRARY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_library"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_all"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="?attr/colorPrimary"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="120dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_game" />

            <!-- SECTION: QUICK TOOLS -->
            <TextView
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/quick_tools"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAllCaps="true"
                android:letterSpacing="0.1"/>

            <!-- ROW 1 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:contentDescription="@string/content_desc_scope"
                            app:tint="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="@string/crosshair_overlay"
                            style="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/btn_toggle_crosshair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/crosshair_style_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:scrollbars="none"
                        android:visibility="gone">
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/crosshair_chip_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true" />
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="@string/content_desc_view"
                        app:tint="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/fps_nmonitor"
                        style="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/btn_toggle_overlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROW 2 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_silent_mode"
                        android:contentDescription="@string/content_desc_lock"
                        app:tint="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/DND_mode"
                        style="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/dnd_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:contentDescription="@string/content_desc_share"
                        app:tint="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/secure_nvpn"
                        style="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/vpn_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Play Time Tracker Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:contentDescription="@string/content_desc_history"
                        app:tint="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/track_ntime"
                        style="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/play_time_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Catsmoker.Card.FeatureRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_crop"
                        android:contentDescription="@string/resolution_changer_title"
                        app:tint="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/resolution_changer_title"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_resolution_changer"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SYSTEM BOOSTER -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:id="@+id/system_card_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_popup_sync"
                            android:contentDescription="@string/content_desc_sync"
                            app:tint="?attr/colorOnSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.Material3.TitleMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/system_maintenance"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/clean_system_summary_text"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/clean_system_summary"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/system_expand_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:importantForAccessibility="no" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/system_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/clean_method">

                            <AutoCompleteTextView
                                android:id="@+id/clean_method_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clean_now"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/clean_now" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="12dp"
                            android:background="@android:color/black"
                            android:padding="8dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/log_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:text="@string/clean_log_default"
                                android:textColor="#00FF00"
                                android:textSize="11sp" />
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DNS SECTION -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:animateLayoutChanges="true">

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/dns_card_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            app:tint="?attr/colorPrimary"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="@string/network_optimization"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"/>

                        <ImageView
                            android:id="@+id/dns_expand_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:importantForAccessibility="no" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/dns_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/dns_method_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="8dp"
                            app:checkedButton="@+id/radio_dns_root"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <Button
                                android:id="@+id/radio_dns_root"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/root_mode"
                                android:textAllCaps="false" />

                            <Button
                                android:id="@+id/radio_dns_vpn"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/vpn_mode"
                                android:textAllCaps="false" />
                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/root_dns_options"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/select_dns_provider"
                                android:labelFor="@+id/dns_spinner_root">

                                <AutoCompleteTextView
                                    android:id="@+id/dns_spinner_root"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- VPN DNS Options -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/vpn_dns_text_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/dns_provider"
                                android:labelFor="@+id/dns_spinner_vpn"
                                android:visibility="gone">

                                <AutoCompleteTextView
                                    android:id="@+id/dns_spinner_vpn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </FrameLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/vpn_custom_dns_layout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/custom_dns_e_g_1_1_1_1"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dns_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textUri" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btn_apply_dns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingVertical="12dp"
                            android:text="@string/apply_settings"
                            android:textAllCaps="false" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>




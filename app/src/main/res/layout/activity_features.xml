<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".FeaturesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:fontFamily="monospace"
            android:text="@string/features_header_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- DNS Changer Card -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="@string/dns_changer_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold" />

                    <!-- Root Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorErrorContainer"
                        android:fontFamily="monospace"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="@string/root_only_label"
                        android:textColor="?attr/colorOnErrorContainer"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="monospace"
                    android:text="@string/select_provider"
                    android:textAppearance="?attr/textAppearanceLabelLarge" />

                <!-- Spinner Container for better styling -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background">

                    <Spinner
                        android:id="@+id/dns_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="8dp" />
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_apply_dns"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="monospace"
                    android:text="@string/apply_dns_button"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Crosshair Card -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/crosshair_overlay"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/crosshair_description"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- Scope Selection -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="4dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Scope 1 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope1"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_1_description"
                                android:padding="16dp"
                                android:src="@drawable/scope1" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope2"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_2_description"
                                android:padding="16dp"
                                android:src="@drawable/scope2" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope3"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_3_description"
                                android:padding="16dp"
                                android:src="@drawable/scope3" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 4 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope4"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_4_description"
                                android:padding="16dp"
                                android:src="@drawable/scope4" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 5 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope5"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_5_description"
                                android:padding="16dp"
                                android:src="@drawable/scope5" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 6 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope6"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_6_description"
                                android:padding="16dp"
                                android:src="@drawable/scope6" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Scope 7 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_scope7"
                            style="?attr/materialCardViewOutlinedStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="4dp"
                            app:cardBackgroundColor="?attr/colorSurface">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/crosshair_scope_7_description"
                                android:padding="16dp"
                                android:src="@drawable/scope7" />
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_crosshair"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="monospace"
                    android:text="@string/activate_crosshair"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Performance Overlay Card -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Performance Overlay"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:text="Enable an overlay to monitor device performance."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_overlay"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="monospace"
                    android:text="@string/launch_overlay"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".GameLauncherActivity">

    <!-- Header Area (Kept simple) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/game_launcher_button"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.7"
            android:fontFamily="monospace"
            android:text="@string/optimize_your_gaming_environment"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true">

        <!-- Optimization: Changed root to ConstraintLayout to flatten hierarchy -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- ============================== -->
            <!--      Game Mode Controls        -->
            <!-- ============================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_game_modes"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Optimization: Internal ConstraintLayout -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- DND Section -->
                    <TextView
                        android:id="@+id/lbl_dnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/block_notifications_amp_calls"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/dnd_switch" />

                    <TextView
                        android:id="@+id/desc_dnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:fontFamily="monospace"
                        android:text="@string/do_not_disturb"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbl_dnd"
                        app:layout_constraintEnd_toStartOf="@+id/dnd_switch" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/dnd_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbl_dnd"
                        app:layout_constraintBottom_toBottomOf="@id/desc_dnd" />

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:alpha="0.1"
                        android:background="?attr/colorOnSurface"
                        app:layout_constraintTop_toBottomOf="@id/desc_dnd" />

                    <!-- Play Time Section -->
                    <TextView
                        android:id="@+id/lbl_playtime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="monospace"
                        android:text="@string/track_play_time"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:layout_constraintEnd_toStartOf="@+id/play_time_switch"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/play_time_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbl_playtime"
                        app:layout_constraintBottom_toBottomOf="@id/lbl_playtime" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ============================== -->
            <!--      Network Monitor Card      -->
            <!-- ============================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_network"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_game_modes">

                <!-- Optimization: Internal ConstraintLayout reduces depth significantly -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Header -->
                    <TextView
                        android:id="@+id/lbl_network"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/network_stability"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_status_badge" />

                    <!-- Status Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_status_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorSecondaryContainer"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:contentPadding="6dp"
                        app:strokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/lbl_network">

                        <TextView
                            android:id="@+id/network_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="@string/network_unknown"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- VPN Section -->
                    <TextView
                        android:id="@+id/lbl_vpn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="monospace"
                        android:text="@string/focus_mode_vpn"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbl_network"
                        app:layout_constraintEnd_toStartOf="@+id/vpn_switch"
                        app:layout_constraintBottom_toBottomOf="@+id/vpn_switch"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/vpn_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbl_vpn" />

                    <!-- DNS Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dns_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/custom_dns_leave_empty_for_default"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/vpn_switch">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dns_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:inputType="text"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_dns_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="monospace"
                        android:text="@string/save_dns"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dns_input_layout" />

                    <!-- Suggestions (Container kept for Visibility Toggling) -->
                    <LinearLayout
                        android:id="@+id/network_suggestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/save_dns_button">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="?attr/colorErrorContainer"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="@string/you_are_on_mobile_data_for_a_better_gaming_experience"
                                    android:textAppearance="?attr/textAppearanceBodySmall"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textStyle="bold" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/data_saver_button"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="monospace"
                                    android:padding="0dp"
                                    android:text="@string/enable_data_saver"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/netguard_button"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:fontFamily="monospace"
                                    android:padding="0dp"
                                    android:text="@string/block_background_data_with_netguard"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Games List Section -->
            <TextView
                android:id="@+id/lbl_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="monospace"
                android:text="@string/installed_games"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_network" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/lbl_games"
                tools:itemCount="3"
                tools:listitem="@android:layout/simple_list_item_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
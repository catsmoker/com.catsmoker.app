<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
      NEW FOUNDATION: We are now using the AppCompat.DayNight theme.
      This single theme will automatically handle switching between light and dark modes.
    -->
    <style name="Base.Theme.Catsmoker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item> <!-- Accent color is used for highlights -->

        <!-- Custom theme attributes -->
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="colorSurface">@color/surfaceColor</item> <!-- Define a default surface for light mode -->
        <item name="colorOnSurface">@color/black</item> <!-- Black text on light surfaces -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Catsmoker" parent="Base.Theme.Catsmoker" />
</resources>